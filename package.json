{
  "name": "nexus_script_template",
  "version": "0.0.0",
  "description": "Template for nexus scripts using typescript",
  "author": "keneanung <keneanung@gmail.com>",
  "license": "MIT",
  "repository": "git://github.com/keneanung/iron-realms-nexus-script-template.git",
  "main": "lib/index.js",
  "devDependencies": {
    "@keneanung/iron-realms-nexus-typings": "^0.2.0",
    "@keneanung/nexus-package-builder": "^1.1.0",
    "@types/jest": "^27.5.0",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "acorn": "^8.7.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-webpack-plugin": "^3.1.1",
    "jest": "^27.5.1",
    "jest-github-reporter": "^1.0.2",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "write-pkg": "^5.1.0"
  },
  "scripts": {
    "serve": "webpack serve --mode development",
    "build": "tsc",
    "webpack": "npm test && webpack build --mode development",
    "webpackProd": "npm test && webpack build --mode production",
    "lint": "eslint . --ext .ts",
    "test": "jest --testLocationInResults --collect-coverage --config jestconfig.json",
    "watchTest": "jest --collect-coverage --config jestconfig.json --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.ts\"",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "website": "cd website && npm run start",
    "setup": "node ./setup.mjs"
  },
  "files": [
    "lib/**/*",
    "!lib/**/__tests__/*",
    "!lib/webpack/**/*"
  ]
}
